{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "outDir": "lib/",
    "lib": ["es2017"]
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
